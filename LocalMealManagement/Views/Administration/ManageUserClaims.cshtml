@model LocalMealManagement.ViewModel.UserClaimsViewModel

<form method="post">
    <div class="card">
        <div class="card-header">
            Manage UserClaims
        </div>
        <div class="card-body">
            @for(int i = 0; i<Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType"/>
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check"/>
                    <label class="form-check-label" asp-for="@Model.Claims[i].ClaimType">
                        @Model.Claims[i].IsSelected
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto"/>
        </div>
    </div>
</form>
