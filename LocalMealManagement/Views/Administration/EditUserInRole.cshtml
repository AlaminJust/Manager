@model List<LocalMealManagement.ViewModel.UserRoleViewModel>


@{ 
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            Add or Remove user From this role.
        </div>
        <div class="card-body">
            @for(int i = 0; i<Model.Count; i++)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input type="hidden" asp-for="@Model[i].UserName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label">@Model[i].UserName</label>
                <input asp-controller="Administration" asp-action="ManageUserClaims" asp-route-userId="@Model[i].UserId" type="submit" value="ManageUserClaims" class="btn btn-primary" style="width:auto" />

            </div>
            }
        </div>
        <div class="card-footer">
            <input asp-controller="Administration" asp-action="EditUserInRole" asp-route-roleId="@roleId" type="submit" value="Update" class="btn btn-primary" style="width:auto"/>
        </div>
    </div>
</form>