@model IEnumerable<LocalMealManagement.ViewModel.CostViewModelList>


@{
    double TotalCost = 0;
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th> AddedBy </th>
            <th> Date </th>
            <th> Description </th>
            <th> Money </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.IdentityUser.UserName </td>
                <td> @item.Date.ToShortDateString()</td>
                <td> @item.Descriptions </td>
                <td> @item.Taka</td>
            </tr>
            TotalCost += item.Taka;
        }
    </tbody>
    <tfoot>
        <tr>
            <th> AddedBy </th>
            <th> Date </th>
            <th> Description </th>
            <th> @TotalCost </th>
        </tr>
    </tfoot>
</table>
