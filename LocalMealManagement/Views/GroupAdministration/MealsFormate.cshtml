<button id="button" onmousedown="getSelectionText()">Selected Text</button>



<div id="demo" onmousedown="myFunction(event)">I am a student and I want to become a good person</div>


<script>
    function myFunction(event) {
        const start = event.currentTarget.selectionStart;
        const end = event.currentTarget.selectionEnd;
        var x = document.getElementById("demo").textContent;
        var prev = x.substring(0, start - 1);
        var next = x.substring(end, x.length);
        var sub = x.substring(start, end);
        sub = sub.bold();
        document.getElementById("demo").textContent = prev + sub + next;
        x = prev + sub + next;
        alert(x);
    }
</script>


<script type="text/javascript">
    var longpress = false;
    function Call() {
        console.log("Hello I AM here");
    }
    $("button").on('click', function () {
        (longpress) ? alert("Long Press") : alert("Short Press");
    });

    var startTime, endTime;
    function Down() {
        startTime = new Date().getTime();
        console.log(startTime);
    };

    function UP() {
        endTime = new Date().getTime();
        longpress = (endTime - startTime < 2000) ? false : true;
        console.log(startTime, " ", endTime, " ", longpress);
    };

    function getSelectionText() {
        var text = "";
        if (window.getSelection) {
            text = window.getSelection().toString();
        } else if (document.selection && document.selection.type != "Control") {
            text = document.selection.createRange().text;
        }
        console.log(text);
        return text;
    }
</script>